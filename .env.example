# YouTube Sentiment Analysis MLOps Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
PYTHON_ENV=development
DEBUG=true
LOG_LEVEL=INFO
APP_NAME=youtube-sentiment-analysis
APP_VERSION=1.0.0

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5001
MLFLOW_EXPERIMENT_NAME=youtube-sentiment-analysis
MLFLOW_ARTIFACT_ROOT=./mlruns
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db

# For production with PostgreSQL backend
# MLFLOW_BACKEND_STORE_URI=postgresql://mlflow:mlflow@localhost:5432/mlflow

# =============================================================================
# DVC CONFIGURATION
# =============================================================================
DVC_REMOTE=local
DVC_CACHE_DIR=.dvc/cache

# For cloud storage (uncomment and configure as needed)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1
# DVC_S3_BUCKET=your-dvc-bucket

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mlflow
DB_USER=mlflow
DB_PASSWORD=mlflow

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=4
API_TIMEOUT=30

# =============================================================================
# JUPYTER CONFIGURATION
# =============================================================================
JUPYTER_PORT=8888
JUPYTER_TOKEN=youtube-sentiment
JUPYTER_PASSWORD=

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_NAME=lightgbm_sentiment_model
MODEL_VERSION=latest
MODEL_STAGE=production
MODEL_PATH=./models

# =============================================================================
# DATA CONFIGURATION
# =============================================================================
DATA_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
INTERIM_DATA_PATH=./data/interim
EXTERNAL_DATA_PATH=./data/external

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# WANDB CONFIGURATION (optional)
# =============================================================================
# WANDB_API_KEY=your_wandb_api_key
# WANDB_PROJECT=youtube-sentiment-analysis
# WANDB_ENTITY=your_wandb_entity

# =============================================================================
# EXTERNAL APIs (if needed)
# =============================================================================
# YOUTUBE_API_KEY=your_youtube_api_key
# OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=mlops-network

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=sqlite:///test.db
TEST_DATA_PATH=./tests/data